# repeats a command
function again() {
	while [ 1 ]; do
		eval $2 $3 $4 $5
		sleep $1
	done
}

function s() {
    if [ $# -gt 0 ]; then
        subl "$@"
    elif [ -e ".sublime.sublime-project"  ]; then
        subl .sublime.sublime-project
    else
        subl .
    fi
}

function gf() {
    git pull && git commit -am $1 && git push
}
